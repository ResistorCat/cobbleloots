{
  "schemaVersion": 1,
  "id": "${mod_id}",
  "version": "${mod_version}",
  "name": "${mod_name}",
  "description": "${mod_description}",
  "authors": [
    "${mod_authors}"
  ],
  "contact": {
    "homepage": "${mod_homepage}",
    "sources": "${mod_source}",
    "issues": "${mod_issues}"
  },
  "license": "${mod_license}",
  "icon": "${mod_logo}",

  "environment": "*",
  "entrypoints": {
    "main": [
      "dev.ripio.cobbleloots.fabric.CobblelootsFabric"
    ],
    "client": [
      "dev.ripio.cobbleloots.fabric.client.CobblelootsFabricClient"
    ],
    "modmenu": [
      "dev.ripio.cobbleloots.fabric.CobblelootsModMenuIntegration"
    ]
  },
  "depends": {
    "fabricloader": ">=${fabric_loader_target_version}",
    "minecraft": "${minecraft_version}",
    "java": ">=21",
    "fabric-api": "*",
    "cobblemon": ">=${cobblemon_target_version}"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${mod_discord}",
        "modmenu.modrinth": "${mod_modrinth}",
        "modmenu.curseforge": "${mod_curseforge}"
      },
      "update_checker": true
    }
  }
}
